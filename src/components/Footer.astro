<style>
	footer {
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
		color: #e5e5e5;
		padding: 3rem 1rem 1rem 1rem;
		margin-top: 4rem;
		border-top: 1px solid rgba(var(--accent), 0.3);
	}
	
	.footer-content {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 2rem;
		margin-bottom: 2rem;
	}
	
	.footer-section h3 {
		color: rgb(var(--accent));
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
		font-weight: 700;
	}
	
	.footer-section h4 {
		color: #ffffff;
		font-size: 1.1rem;
		margin-bottom: 1rem;
		font-weight: 600;
		border-bottom: 2px solid rgb(var(--accent));
		display: inline-block;
		padding-bottom: 0.25rem;
	}
	
	.footer-section p {
		color: #d1d1d1;
		line-height: 1.6;
		margin-bottom: 0.5rem;
		font-weight: 400;
	}
	
	.social-links {
		display: flex;
		gap: 1rem;
		margin-top: 1rem;
	}
	
	.social-links a {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 44px;
		height: 44px;
		background: rgba(var(--accent), 0.15);
		border: 1px solid rgba(var(--accent), 0.4);
		border-radius: 50%;
		color: rgb(var(--accent));
		text-decoration: none;
		transition: all 0.3s ease;
	}
	
	.social-links a:hover {
		background: rgb(var(--accent));
		color: white;
		transform: translateY(-3px);
		box-shadow: 0 4px 15px rgba(var(--accent), 0.4);
	}
	
	.footer-nav {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}
	
	.footer-nav a {
		color: #d1d1d1;
		text-decoration: none;
		padding: 0.25rem 0;
		border-bottom: 1px solid transparent;
		transition: all 0.3s ease;
		display: inline-block;
		font-weight: 400;
	}
	
	.footer-nav a:hover {
		color: rgb(var(--accent));
		border-bottom-color: rgb(var(--accent));
		padding-left: 0.5rem;
	}
	
	.footer-bottom {
		max-width: 1200px;
		margin: 0 auto;
		border-top: 1px solid rgba(255, 255, 255, 0.2);
		padding-top: 1.5rem;
		text-align: center;
	}
	
	.footer-bottom p {
		color: #c0c0c0;
		margin: 0.25rem 0;
		font-weight: 400;
	}
	
	.footer-tagline {
		color: rgb(var(--accent));
		font-style: italic;
		font-weight: 500;
	}
	
	@media (max-width: 768px) {
		.footer-content {
			grid-template-columns: 1fr;
			text-align: center;
		}
		
		.social-links {
			justify-content: center;
		}
		
		.footer-nav {
			align-items: center;
		}
		
		footer {
			padding: 2rem 1rem 1rem 1rem;
		}
	}
</style>
