---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Test Mentor Page" description="Test mentor page" />
		<style>
			main {
				width: 960px;
				max-width: calc(100% - 2rem);
				margin: auto;
				padding: 3rem 1rem;
			}
			
			.test-section {
				background: red;
				color: white;
				padding: 2rem;
				margin: 2rem 0;
				text-align: center;
				font-size: 1.5rem;
			}
			
			.cta-section {
				background: blue;
				color: white;
				padding: 4rem 2rem;
				border-radius: 20px;
				text-align: center;
				margin-top: 4rem;
			}
			
			.btn-secondary {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				background: white;
				color: blue;
				padding: 1rem 2rem;
				border-radius: 0.75rem;
				text-decoration: none;
				font-weight: 600;
				font-size: 1.1rem;
			}
		</style>
